.tooltip{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.tooltip-container{
  width: 200px;
  height: 200px;
  border-radius: 4px;
  text-align: center;
  color: #ffffff;
}
